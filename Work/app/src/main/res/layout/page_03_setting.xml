<?xml version="1.0" encoding="utf-8"?>
<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <PreferenceCategory android:title="我的位置">

        <CheckBoxPreference
            android:key="wifi"
            android:summary="使用无线网络查看应用程序（例如Google地图）中的位置"
            android:title="使用无线网络" />

        <CheckBoxPreference
            android:key="gps"
            android:summary="定位时，精确到街道级别（取消选择可节约电量）"
            android:title="启用GPS卫星设置" />
    </PreferenceCategory>

    <PreferenceCategory android:title="配置信息">

        <ListPreference
            android:dialogTitle="选择语言"
            android:entries="@array/language"
            android:entryValues="@array/language_value"
            android:key="language"
            android:title="语言"></ListPreference>

        <LinearLayout
            android:id="@+id/ll_other"
            android:layout_width="match_parent"
            android:layout_height="73dp">

            <TextView
                style="@style/usertext"
                android:layout_height="114dp"
                android:text="其他" />
        </LinearLayout>
    </PreferenceCategory>

</PreferenceScreen>
